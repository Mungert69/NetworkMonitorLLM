import os
import chardet
from html2text import HTML2Text

def html_to_txt(html_file, txt_file):
    # 自动检测   件编码格式
    with open(html_file, 'rb') as f:
        rawdata = f.read()
    encoding = chardet.detect(rawdata)['encoding']

    # 使用检测到的编码格式读取文件内容
    with open(html_file, 'r', encoding=encoding, errors='ignore') as f:
        html_content = f.read()

    # 使用 HTML2Text 库将 HTML 文本转换为纯文本
    h = HTML2Text()
    h.ignore_links = True
    h.ignore_images = True
    txt_content = h.handle(html_content)

    # 写入文本文件
    with open(txt_file, 'w', encoding='utf-8') as f:
        f.write(txt_content)

def convert_html_to_txt(input_dir, output_dir):
    # 遍历输入目录中的所有文件
    for root, dirs, files in os.walk(input_dir):
        for file in files:
            # 检查文件是否为 HTML 文件或 HTM 文件
            if file.endswith('.html') or file.endswith('.htm'):
                # 构造 HTML 文件和输出文件的路径
                html_file = os.path.join(root, file)
                txt_file = os.path.join(output_dir, os.path.relpath(html_file, input_dir) + '.txt')
                # 检查输出文件的父目录是否存在,如果不存在,则创建它
                txt_dir = os.path.dirname(txt_file)
                if not os.path.exists(txt_dir):
                    os.makedirs(txt_dir)
                # 将 HTML 文件转换为 TXT 文件
                html_to_txt(html_file, txt_file)

if __name__ == '__main__':
