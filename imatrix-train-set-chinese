import os
import re

def merge_txt_files(input_dir, output_file):
    # 遍历输入目录中的所有文件
    c_files = []
    e_files = []
    for root, dirs, filenames in os.walk(input_dir):
        for filename in filenames:
            if filename.endswith('.txt') and filename.startswith('c'):
                c_files.append(os.path.join(root, filename))
            elif filename.endswith('.txt') and filename.startswith('e'):
                e_files.append(os.path.join(root, filename))

    # 对文件名进行排序
    c_files.sort(key=lambda x: (int_or_default(re.findall(r'\d+', os.path.relpath(x, input_dir).split('\\')[0].split('-')[-1].split('_')[-1])), x))
    e_files.sort(key=lambda x: (int_or_default(re.findall(r'\d+', os.path.relpath(x, input_dir).split('\\')[0].split('-')[-1].split('_')[-1])), x))

    # 将所有文件合并到一个文件中
    with open(output_file, 'w', encoding='utf-8') as f:
        for txt_file in c_files:
            with open(txt_file, 'r', encoding='utf-8') as g:
                f.write(g.read())
                f.write('\n')
        for txt_file in e_files:
            with open(txt_file, 'r', encoding='utf-8') as g:
                f.write(g.read())
                f.write('\n')

def int_or_default(match, default=float('inf')):
    if match:
        # 提取文件名中的数字部分,并将其转换为整数
        num = int(''.join(match))
        return num
    else:
        return default

if __name__ == '__main__':
    input_dir = 'F:\\OpenSource-Datasets\\校验数据集备份\\英汉对照书籍\\output'
    output_file = 'F:\\OpenSource-Datasets\\校验数据集备份\\英汉对照书籍\\output\\merged.txt'
    merge_txt_files(input_dir, output_file)

