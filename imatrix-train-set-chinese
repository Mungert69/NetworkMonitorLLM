import torch
from transformers import AutoModelForCausalLM, AutoTokenizer
from config import model_path, device, use_mock_model
from pydantic import BaseModel
from typing import List, Dict
import asyncio
import random
import string
import itertools
import unicodedata



import warnings
import re
# 忽略特定的 FutureWarning 警告内容如下所示
warnings.filterwarnings(
    action="ignore",  # 忽略匹配的警告
    category=FutureWarning,  # 警告类别为 FutureWarning
    message=re.compile(r"`_is_quantized_training_enabled` is going to be deprecated").pattern, 
) # 警告消息包含指定的正则表达式

class ResponseModel(BaseModel):
    id: str
    choices: List[Dict[str, str]]
    object: str
    created: int
    model: str
    usage: Dict[str, int]

class MockModel:
    def __init__(self):
        # print("Info:模拟模型MockModel初始化")
        self.tokenizer = tokenizer
        self.vocab_size = len(self.tokenizer.vocab)
        # 中文字符的ID范围
        self.chinese_char_start = 5000
        self.chinese_char_end = 6000

    def generate(self, input_ids, **kwargs):
        # print("Info:模拟模型MockModel-generate生成令牌ID")
        batch_size = input_ids.size(0)
        sequence_length = input_ids.size(1)
        generated_ids = torch.randint(self.chinese_char_start, self.chinese_char_end, (batch_size, 3)) # 随机产生3个令牌ID
        print("generated_ids:", generated_ids)
        # 将输入的提示与模型生成的内容连接起来
        generated_ids = torch.cat([input_ids, generated_ids], dim=1)
        return generated_ids


    async def stream_generate(self, input_ids, **kwargs):
        # print("Info:模拟模型MockModel-stream_generate流式生成令牌ID开始")
        batch_size = input_ids.size(0)
        sequence_length = input_ids.size(1)
        async def generate_token_ids():
            # print("Info:模拟模型MockModel-generate_token_ids流式生成令牌ID进行中")
            for _ in range(sequence_length, sequence_length + 7): # 随机流式生成7个令牌ID
                await asyncio.sleep(0.1)
                random_id = random.randint(self.chinese_char_start, self.chinese_char_end - 1)
                # print("random_id:", random_id)
                print(torch.tensor([[random_id]]).repeat(batch_size, 1))
                yield torch.tensor([[random_id]]).repeat(batch_size, 1)

        async for token_id in generate_token_ids():
            # print("token_id:", token_id)
            yield token_id
        # print("Info:模拟模型MockModel-generate_token_ids流式生成令牌ID结束")




class MockTokenizer:
    def __init__(self):
        # print("Info:模拟词表MockTokenizer初始化开始")
        self.vocab = {
            "<s>": 0,
            "<pad>": 1,
            "</s>": 2,
            "<unk>": 3,
            # Add other tokens as needed
        }
        # Add random words and IDs to the vocabulary
        vocab_size = 10000
        for i in range(4, vocab_size):
            word_length = random.randint(1, 10)
            word = ''.join(random.choices(string.ascii_letters + string.digits, k=word_length))
            self.vocab[word] = i

        # Add Chinese characters to the vocabulary
        chinese_chars = (chr(i) for i in range(0x4E00, 0x9FAF+1))
        chinese_chars = (c for c in chinese_chars if unicodedata.east_asian_width(c) == 'W')
        chinese_chars = itertools.islice(chinese_chars, 5000)
        for i, char in enumerate(chinese_chars, start=vocab_size):
            self.vocab[char] = i

        # 在初始化时就计算逆映射,注意这里使用单下划线开头的名称来避免名称冲突
        self._vocab_inv = {v: k for k, v in self.vocab.items()}
        # print("Info:模拟词表MockTokenizer初始化完成,逆映射计算完成")

    def get_all_vocab_ids(self):
        return list(self.vocab.values())

    def __call__(self, texts, return_tensors=None):
        # print("Info:模拟词表MockTokenizer调用开始")
        input_ids = [self.encode(text) for text in texts]
        input_ids = torch.tensor(input_ids)
        return self.MockTensorDict(input_ids)

    def encode(self, text):
        # print("Info:模拟词表MockTokenizer编码开始")
        tokens = text.split()
        return [self.vocab.get(token, self.vocab["<unk>"]) for token in tokens]

    def convert_text_to_tokens(self, text):
        # print("Info:模拟词表MockTokenizer将文本转为token开始")
        tokens = text.split()
        return [self.vocab.get(token, self.vocab["<unk>"]) for token in tokens]

    def decode(self, token_ids, skip_special_tokens=False):
        # print("Info:模拟词表MockTokenizer解码开始")
        # 使用已计算好的逆映射进行解码,注意这里也使用单下划线开头的名称
        tokens = [self._vocab_inv.get(tid, random.choice(list(self.vocab.keys()))) for tid in token_ids] # 如果id是unk 则随机选择一个令牌
        if not skip_special_tokens:
            return "".join(tokens)
        return "".join(token for token in tokens if token not in {"<s>", "</s>", "<pad>"})

    def batch_decode(self, token_ids, skip_special_tokens=False):
        # print("Info:模拟词表MockTokenizer批量解码开始")
        return [self.decode(tid, skip_special_tokens) for tid in token_ids]

    def apply_chat_template(self, messages, tokenize=True, add_generation_prompt=True):
        # print("Info:模拟词表MockTokenizer应用聊天模板开始")
        content = "".join([f"{m['role']}: {m['content']}" for m in messages])
        if tokenize:
            return self(content)
        return content

    @property
    def vocab_inv(self):
        return {v: k for k, v in self.vocab.items()}

    class MockTensorDict:
        def __init__(self, input_ids):
            self.input_ids = input_ids
            self.device = None

        def to(self, device):
            self.device = device
            return self

        def __getitem__(self, key):
            return getattr(self, key)

        def __setitem__(self, key, value):
            setattr(self, key, value)



if use_mock_model:
    # print("正在使用模拟模型进行测试……")
    tokenizer = MockTokenizer()
    model = MockModel()
else:
    warnings.filterwarnings(
        action="ignore",
        category=FutureWarning,
        message=re.compile(r"`_is_quantized_training_enabled` is going to be deprecated").pattern,
    )
    # print("正在启动模型,可能花费几分钟,请稍候……")
    model = AutoModelForCausalLM.from_pretrained(
        model_path,
        torch_dtype="auto",
        device_map="auto"
    ).to(device)
    tokenizer = AutoTokenizer.from_pretrained(model_path)


from typing import List, Optional, Dict, Generator, AsyncGenerator
from model import model, tokenizer
from config import apiGET_params, device, history_token_count, history_generation_time, Message, stream_enable, stream
import time


# 定义生成响应的异步函数,用于分流处理聊天生成
async def generate_response(messages: List[Message], **generate_params) -> AsyncGenerator:

    ### 输入消息预处理开始
    # print("Info:generate_response输入消息预处理开始")
    # 合并默认生成参数和用户提供的生成参数
    merged_generate_params = apiGET_params.copy()  # 创建默认参数的副本
    merged_generate_params.update(generate_params)  # 使用用户提供的参数更新默认参数
    # print("Info:generate_response调用生成函数时是否为流式传输", stream.data)
    # 将消息转换为可以输入到模型中的格式
    text = tokenizer.apply_chat_template(
        messages,  # 使用传入的messages参数,确保包含最新的对话
        tokenize=False,
        add_generation_prompt=True
    )
    # 将文本转换为模型输入
    model_inputs = tokenizer([text], return_tensors="pt").to(device)
    ### 输入消息预处理结束
    
    # 根据stream参数选择生成方式
    if stream.data:
        if stream_enable:  #使能
            # print("Info:generate_response启用流式传输stream_True_response")
            # stream.data = True ,启用流式传输
            # return stream_True_response(model_inputs, **merged_generate_params)
            async for data in stream_True_response(model_inputs, **merged_generate_params): # 调用并迭代生成器
                # 做一些处理,例如存储或分析数据
                # 使用async for循环来迭代生成器
                # 在这里可以使用yield产生的所有值
                # 更新response, prompt_tokens, completion_tokens, total_tokens
                response = data["response"]
                prompt_tokens = data["prompt_tokens"]
                completion_tokens = data["completion_tokens"]
                total_tokens = data["total_tokens"]
                
                # print("generate_response接收并准备转发的yield响应:", response, prompt_tokens, completion_tokens, total_tokens)
                yield {"response": response, 
                       "prompt_tokens": prompt_tokens,
                       "completion_tokens": completion_tokens,
                       "total_tokens": total_tokens}
                # yield {"response": response, "prompt_tokens": prompt_tokens, "completion_tokens": completion_tokens, "total_tokens": total_tokens}
        else:
            print("Info:此时禁用了stream使能,所以省略了流式传输的代码")
    else:
        # print("Info:generate_response启用非流式传输stream_False_response")
        # stream.data = False ,启用非流式传输(系统测试消息也用这个)
        response, prompt_tokens, completion_tokens, total_tokens = await stream_False_response(model_inputs, **merged_generate_params) # 调用函数生成响应 
        # 返回生成的响应
        # print(response, prompt_tokens, completion_tokens, total_tokens)
        # return response, prompt_tokens, completion_tokens, total_tokens # generate_response return
        yield {"response": response,
               "prompt_tokens": prompt_tokens,
               "completion_tokens": completion_tokens,
               "total_tokens": total_tokens}

async def stream_True_response(model_inputs, **merged_generate_params):
    response_text = ""  # 初始化 response_text 变量
    prompt_tokens = 0  # 初始化提示令牌数
    completion_tokens = 0  # 初始化完成令牌数
    total_tokens = 0  # 初始化总令牌数
    
    # 流式传输生成
    # print("Info:stream_True_response流式传输-开始解码")
    async for output in model.stream_generate(
        model_inputs.input_ids,
        **merged_generate_params,):
        # print("Info:stream_True_response流式传输-结束解码")
        # 解码生成的响应,将令牌 ID 转换回文本
        new_text = tokenizer.decode(output, skip_special_tokens=True)
        # 叠加解码后的文本
        response_text += new_text
        # print("Info:stream_True_response流式传输-正在叠加解码文本")
        print(response_text)
        # 返回生成的响应
        # 计算令牌数
        # 计算令牌数
        current_prompt_tokens = len(model_inputs.input_ids[0])  # 获取当前输入的提示令牌数
        current_completion_tokens = len(output)  # 获取当前生成的完成令牌数
        prompt_tokens += current_prompt_tokens
        completion_tokens += current_completion_tokens
        total_tokens = prompt_tokens + completion_tokens
        # print("stream_True_response产生的yield响应:", response_text, prompt_tokens, completion_tokens, total_tokens)
        yield {"response": response_text, 
               "prompt_tokens": prompt_tokens,
               "completion_tokens": completion_tokens,
               "total_tokens": total_tokens}


# stream.data = False ,启用非流式传输
async def stream_False_response(model_inputs, **merged_generate_params):
    # print("Info:stream_False_response非流式传输-开始解码")
    prompt_tokens = 0  # 初始化提示令牌数
    completion_tokens = 0  # 初始化完成令牌数
    total_tokens = 0  # 初始化总令牌数
    # 记录开始时间
    start_time = time.time()
    # 一次性生成模型输出
    # 获取生成的令牌 ID 包括输入的提示(prompt)和模型生成的内容。
    generated_ids = model.generate(
        model_inputs.input_ids,
        **merged_generate_params,
    )
    # print("Info:stream_False_response-generated_ids-1,获取生成的令牌 ID,包括输入的提示(prompt)和模型生成的内容。\n", generated_ids)
    # print("Info:stream_False_response非流式传输-结束解码")
    
    # print("Info:stream_False_response非流式传输-输出消息后处理开始")
    ### 输出消息后处理开始
    # 记录结束时间
    end_time = time.time()     
    # 计算生成时间
    generation_time = max(end_time - start_time, 1e-9)  # 使用一个非常小的非零值作为最小时间
    # 获取生成的令牌 ID 通过切片操作获取的模型生成的内容的令牌 ID,剔除了输入的提示(prompt)。
    generated_ids = [output_ids[len(input_ids):] for input_ids, output_ids in zip(model_inputs.input_ids, generated_ids)]
    # print("Info:stream_False_response-generated_ids-2,获取生成的令牌 ID 通过切片操作获取的模型生成的内容的令牌 ID,剔除了输入的提示(prompt)。\n", generated_ids)
    # 解码生成的响应,将令牌 ID 转换回文本
    response = tokenizer.batch_decode(generated_ids, skip_special_tokens=True)[0]
    # print("Info:stream_False_response-response", response)
    # 计算令牌数
    token_count = len(generated_ids[0])
    # 计算生成速度
    generation_speed = min(token_count / generation_time, 999999.99)  
    # 使用999999.99的值作为最大速度
    # 打印生成参数
    print("Info:生成参数:", merged_generate_params)
    # 打印该次生成使用的令牌数和生成速度
    print(f"Info:该次使用令牌数: {token_count}, 生成速度: {generation_speed:.2f} token/s")
    # 更新历史令牌数和总生成时间
    global history_token_count, history_generation_time
    history_token_count += token_count
    history_generation_time += generation_time
    # 计算历史平均生成速度
    history_generation_speed = min(history_token_count / history_generation_time, 999999.99)  
    # 使用999999.99的值作为最大速度
    # 打印历史使用的令牌数和历史平均生成速度
    print(f"Info:历史使用令牌数: {history_token_count}, 历史平均生成速度: {history_generation_speed:.2f} token/s")
    # 打印刚刚生成的消息
    print("Info:刚刚生成的消息:", response)
    # 计算 prompt tokens
    prompt_tokens = len(model_inputs.input_ids[0])
    # 计算 completion tokens
    completion_tokens = len(generated_ids[0])
    # 计算 total tokens
    total_tokens = prompt_tokens + completion_tokens
    # print("Info:stream_False_response非流式传输-输出消息后处理结束")
    # 返回生成的响应
    # print(response, prompt_tokens, completion_tokens, total_tokens)
    
    return response, prompt_tokens, completion_tokens, total_tokens # stream_False_response return
