with open('1.txt', 'r', encoding='utf-8') as f1:
    # Open the second file in read mode
    with open('2.txt', 'r', encoding='utf-8') as f2:
        # Open the third file in write mode
        with open('3.txt', 'w', encoding='utf-8') as f3:
            # Read the contents of the first file and write them to the third file
            f3.write(f1.read())
            # Read the contents of the second file and write them to the third file
            f3.write(f2.read())

import json
import glob
import os
import random
import threading
import queue
import chardet
import ftfy

EXTRACT_LINES = 200
filtered_count = 0  # 在这里定义变量过滤数量
kept_count = 0  # 保留数量

# user_choice = 3 表示默认选择"全部提取"
user_choice = 3
print(f"\n默认全部提取")

# 定义屏蔽词列表
chinese_blocked_words = [
    "示例_sl1", "示例_sl2", "示例_sl3"
]
english_blocked_words = [
    "示例_sl1", "示例_sl2", "示例_sl3"
]
japanese_blocked_words = [
    "示例_sl1", "示例_sl2", "示例_sl3"
]
blocked_words = chinese_blocked_words + english_blocked_words + japanese_blocked_words

# 检查输出文件是否已存在,如果存在则删除该文件
output_file_path = 'My-uncensored-data.txt'
if os.path.exists(output_file_path):
    os.remove(output_file_path)

# 获取当前文件夹内所有 .json 和 .txt 文件
json_files = glob.glob('./*.json')
txt_files = glob.glob('./*.txt')
all_files = json_files + txt_files

# 按文件名排序(不转换为整数)
all_files.sort(key=lambda x: x)

# 打开输出文件
output_file = open(output_file_path, 'w', encoding='utf-8')

for file in all_files:
    # 自动检测文件编码
    with open(file, 'rb') as f:
        result = chardet.detect(f.read())
    encoding = result['encoding']
    if encoding == 'gb2312':
        encoding = 'gbk'  # 将GB2312替换为GBK

    # 使用检测到的编码格式读取文件
    with open(file, 'r', encoding=encoding, errors='replace') as f:
        lines = [ftfy.fix_text(line) for line in f]

    for line in lines:
        content = ' '.join(line.strip().split())
        if any(word in content for word in blocked_words):
            filtered_count += 1
        else:
            output_file.write(content)
            output_file.write('\n')
            kept_count += 1

# 确保所有数据都被写入文件并关闭文件
output_file.close()

print("完成")
print(f"代码中有屏蔽词表,当前只提取无审查内容,共过滤掉 {filtered_count} 行,共保留 {kept_count} 行")

import json
import re
import requests
import os

def split_sentences(text, max_len=100, min_len=10):
    punctuation_marks = ['。', '!', '?', '.', '!', '?', ';', ':', ',', '、', ',', '\n', '\\n']
    sentences = [text]
    for mark in punctuation_marks:
        sentences = [s.strip() for s in (''.join(sentences)).split(mark)]

    result = []
    temp = []
    for sentence in sentences:
        if len(sentence) <= max_len:
            if len(sentence.strip()) >= min_len:
                result.append(sentence.strip())
            elif temp:
                temp[-1] += sentence
            else:
                temp.append(sentence.strip())
        else:
            last_space = None
            for i in range(max_len - 1, 0, -1):
                if sentence[i] in punctuation_marks:
                    last_space = i
                    break
            if last_space is None:
                last_space = max_len
            result.append(sentence[:last_space].strip())
            remaining = sentence[last_space:].strip()
            if remaining:
                result.extend(split_sentences(remaining, max_len, min_len))

    return result

def translate_sentence(sentence):
    # OpenAI API 的接口地址
    url = "http://localhost:8000/v1/chat/completions"
    # 组织请求体
    data = {
        "model": "DataSoul/CausalLM-34b-beta-f16",
        "messages": [
            {"role": "system", "content": "Translate this from Japanese to Chinese.\n"},
            {"role": "user", "content": f"\nJapanese:{sentence} \nChinese:"}
        ],
        "temperature": 0.7,
    }
    # 发送请求
    response = requests.post(url, json=data)
    # 提取翻译后的内容
    translation = response.json()["choices"][0]["message"]["content"].strip()
    return translation

with open("input.txt", "r", encoding="utf-8") as f:
    content = f.read()

# 将整个文本按句子分割
sentences = split_sentences(content)

print(f"切分后需要处理的句子总数: {len(sentences)}")

processed_sentences = 0
total_sentences = len(sentences)

# 清空输出文件
if os.path.exists("output-cn.txt"):
    os.remove("output-cn.txt")

# 定义占位符
PLACEHOLDER = {"instruction:": "INST_PLACEHOLDER", "output:": "OUTPUT_PLACEHOLDER", "\n": "NEWLINE_PLACEHOLDER", "\\n": "NEWLINE_PLACEHOLDER"}

for sentence in sentences:
    # 用占位符替换特定关键字和换行符
    for key in PLACEHOLDER:
        sentence = sentence.replace(key, PLACEHOLDER[key])

    translation = translate_sentence(sentence)

    # 将占位符恢复为原来的关键字和换行符
    for key in PLACEHOLDER:
        translation = translation.replace(PLACEHOLDER[key], key)

    # 每翻译完一个句子就保存一次进度
    with open("output-cn.txt", "a", encoding="utf-8") as f:
        f.write(translation + "\n")
        processed_sentences += 1
        print(f"{processed_sentences}/{total_sentences} 已处理并保存的句子数量。")

