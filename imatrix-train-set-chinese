model_path = "F:\\OpensourceAI-models\\Qwen\\Qwen1.5-MoE-A2.7B-Chat-GPTQ-Int4"
if not os.path.exists(model_path):
    raise HTTPException(status_code=500, detail="模型路径不存在")  # 检查模型路径是否存在,如果不存在则抛出 HTTPException

device = "cuda" if torch.cuda.is_available() else "cpu"  # 设置设备为 CUDA(如果可用)或 CPU

model = AutoModelForCausalLM.from_pretrained(  # 加载预训练的模型
    model_path,
    torch_dtype="auto",
    device_map="auto"
).to(device)

tokenizer = AutoTokenizer.from_pretrained(model_path)  # 加载预训练的令牌化器

class Message(BaseModel):  # 定义消息的 Pydantic 模型
    role: str  # 角色:system 或 user
    content: str  # 消息内容
    
# 初始化历史记录列表,用于保存所有消息
history = []

# 定义生命周期管理器
class LifespanManager:
    async def on_startup(self):  # 在加载成功后,自动给模型发送一条信息
        messages = [
            {
                "role": "system",
                "content": "你是一个助手,用简洁明了、逻辑连贯的中文进行回答,并提供详准确可靠的回复,避免不实的猜测或编造内容。"
            }
        ]
        print("Input:", messages)  # 打印预先输入的信息
        response, prompt_tokens, completion_tokens, total_tokens = await generate_response(messages)  # 调用 generate_response 函数生成响应
        # 注意:不再使用 responses 列表,直接将响应添加到历史记录中
        history.extend(messages)
        history.append({"role": "assistant", "content": response})
        
    async def on_shutdown(self):
        pass

# 设置默认的生成参数
default_generate_params = {
    "max_new_tokens": 500,  # 限制生成的文本长度
    "temperature": 0.7,
    "top_k": 20,
    "top_p": 0.8,
    "repetition_penalty": 1.05
}

# 定义一个 POST 路由,用于处理聊天请求
@app.post("/v1/chat/completions")
# 定义处理聊天请求的异步函数
async def chat_completions(request: Request):
    # 获取请求数据
    data = await request.json()
    # 获取消息列表
    messages = data.get("messages", [])
    # 打印接收到的messages
    print("接收到的messages:", messages) #为了调试的信息
    # 打印完整的请求对象
    print("完整的请求对象:", request) #为了调试的信息
    
     # 获取最后一个用户消息
    last_user_message = next((msg for msg in reversed(messages) if msg["role"] == "user"), None)


    # 检查是否启用内置历史记录,如果内置历史记录启用
    if app.state.enable_builtin_history:
        # 如果存在最后一个用户消息,将其添加到历史记录中
        if last_user_message:
            history.append(last_user_message)
        
    
    # 打印新接收到的信息,只打印最新的用户问题内容
    latest_user_message = next((msg for msg in reversed(messages) if msg["role"] == "user"), None)
    print("最新的用户问题:", latest_user_message["content"] if latest_user_message else "无最新用户问题")

    # 尝试生成响应
    try:
        # 检查是否启用内置历史记录
        if app.state.enable_builtin_history:
            # 如果内置历史记录启用,则使用历史记录生成响应
            generated_response, prompt_tokens, completion_tokens, total_tokens = await generate_response(history)
        else:
            # 如果内置历史记录关闭,则使用当前接收的消息生成响应
            generated_response, prompt_tokens, completion_tokens, total_tokens = await generate_response(messages)
    except Exception as e:
        # 如果生成响应时发生异常,则打印异常信息并返回错误响应
        print(f"生成响应时发生异常: {e}")
        raise HTTPException(status_code=500, detail="生成响应时发生内部错误")

    # 在函数 chat_completions 中,提取模型标识符并赋值给 model_name
    model_name = data.get("model", "model-identifier")  # 从请求数据中获取模型标识符,默认为 "model-identifier"

    # 在生成响应后,打印模型名字
    print("模型名字:", model_name)




    # response_data = generated_response

    # 构建响应数据,确保符合新的openai-api响应格式
    response_data = {
        "id": f"chatcmpl-{len(history) + 1}",
        "choices": [
            {
                "message": {
                    "role": "assistant", 
                    "content": generated_response,
                    "function_call": "null",
                    "tool_calls": "null"
                },
                "finish_reason": "stop",
                "index": 0,
            }
        ],
        "object": "chat.completion",
        "created": int(round(float(time.time()))),
        "model": model_name,  # 模拟 GPT-3.5 的模型名称
        "usage":{
            "completion_tokens": completion_tokens,
            "prompt_tokens": prompt_tokens,
            "total_tokens": prompt_tokens
            },
    }

    # 如果内置历史记录打开,将助手的回复添加到历史记录中
    if app.state.enable_builtin_history:
        history.append({"role": "assistant", "content": generated_response})
        
        
    # 检查 history 是否为空
    if history:
        # 如果 history 不为空,打印它的 JSON 格式信息
        print(f"History: {history}")
    else:
        # 如果 history 为空,打印提示信息
        print("历史记录为空,没有可用的历史信息。")

    # 打印传给API的完整响应信息
    print("传给API的完整响应信息:", response_data)

    # 返回响应数据
    return response_data



# 定义生成响应的异步函数,用于处理聊天生成
async def generate_response(messages: List[Message], **generate_params):
    # 合并默认生成参数和用户提供的生成参数
    merged_generate_params = default_generate_params.copy()  # 创建默认参数的副本
    merged_generate_params.update(generate_params)  # 使用用户提供的参数更新默认参数

    # 将消息转换为可以输入到模型中的格式
    text = tokenizer.apply_chat_template(
        messages,  # 使用传入的messages参数,确保包含最新的对话
        tokenize=False,
        add_generation_prompt=True
    )

    # 将文本转换为模型输入
    model_inputs = tokenizer([text], return_tensors="pt").to(device)

    # 记录开始时间
    start_time = time.time()

    # 生成模型输出
    generated_ids = model.generate(
        model_inputs.input_ids,
        **merged_generate_params,
        )

    # 计算生成时间
    generation_time = time.time() - start_time

    # 获取生成的令牌 ID
    generated_ids = [output_ids[len(input_ids):] for input_ids, output_ids in zip(model_inputs.input_ids, generated_ids)]

    # 解码生成的响应,将令牌 ID 转换回文本
    response = tokenizer.batch_decode(generated_ids, skip_special_tokens=True)[0]

    # 计算令牌数
    token_count = len(generated_ids[0])

    # 打印生成参数
    print("生成参数:", merged_generate_params)

    # 打印该次生成使用的令牌数和生成速度
    print(f"该次使用令牌数: {token_count}, 生成速度: {token_count / generation_time:.2f} token/s")

    # 更新历史令牌数和总生成时间
    global history_token_count, history_generation_time
    history_token_count += token_count
    history_generation_time += generation_time

    # 打印历史使用的令牌数和历史平均生成速度
    print(f"历史使用令牌数: {history_token_count}, 历史平均生成速度: {history_token_count / history_generation_time:.2f} token/s")

    # 打印刚刚生成的消息
    print("刚刚生成的消息:", response)

    # 计算 prompt tokens
    prompt_tokens = len(model_inputs.input_ids[0])
    
    # 计算 completion tokens
    completion_tokens = len(generated_ids[0])
    
    # 计算 total tokens
    total_tokens = prompt_tokens + completion_tokens
    
    # 返回生成的响应
    return response, prompt_tokens, completion_tokens, total_tokens

# 初始化历史令牌数和总生成时间
history_token_count = 0
history_generation_time = 0




# 定义应用状态,包含内置历史记录的开关
class AppState:
    def __init__(self):
        self.enable_builtin_history = True  # 默认开启内置历史记录

# 初始化应用状态
app.state = AppState()

# 添加生命周期管理器
