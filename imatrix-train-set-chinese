from fastapi import Request, HTTPException
from response_generator import generate_response
from config import apiGET_params, debug, stream
from routes import app
from typing import List, Optional, Dict, Generator
import time


# 定义处理聊天请求的异步函数
async def chat_completions(request: Request):
    # print("Info:chat_completions收到请求,正在解析")
    # 解析请求并打印调试信息
    messages, model_name, stream = await parse_request_and_log(request, app)
    
    # print("Info:chat_completions收到准备拿去调用的messages, model_name, stream.data")
    # print(messages, model_name, stream.data)
    # 尝试生成响应
    try:
        # 检查是否启用内置历史记录
        if app.state.enable_builtin_history:
            messages_chat = app.state.history
            # print("Info:启用内置历史记录")
            # 如果内置历史记录启用,则使用历史记录生成响应
            # print("Info:使用历史记录调用并迭代生成器")
        else:
            messages_chat = messages
            # print("Info:不启用内置历史记录")
            # 如果内置历史记录不启用,则使用当前消息生成响应
            # print("Info:使用当前消息调用并迭代生成器,已完成")
        async for data in generate_response(messages_chat): # 调用并迭代生成器
            # 做一些处理,例如存储或分析数据
            # 使用async for循环来迭代生成器
            # 更新response, prompt_tokens, completion_tokens, total_tokens
            response = data["response"]
            prompt_tokens = data["prompt_tokens"]
            completion_tokens = data["completion_tokens"]
            total_tokens = data["total_tokens"]
            # 在异步生成器结束后调用后处理函数
            # 需要的参数:app, app.state.history, response, model_name, prompt_tokens, completion_tokens
            response_data = await after_request_and_log(app, app.state.history, response, model_name, prompt_tokens, completion_tokens)
            # 打印传给API的完整响应信息
            # print("准备打印chat_completions收到的响应信息:")
            # print("chat_completions收到的-准备传给app.py的响应信息:", response_data)
            yield response_data
    except Exception as e:
        # 如果生成响应时发生异常,则打印异常信息并返回错误响应
        print(f"error:生成响应时发生异常: {e}")
        raise HTTPException(status_code=500, detail="error:生成响应时发生内部错误")
        
    
    
# 为chat_completions预处理接收到的消息
async def parse_request_and_log(request: Request, app):
    # print("Info:parse_request_and_log收到请求,正在解析")
    # print("Info:开始为chat_completions预处理接收到的消息")
    # 读取request_body
    body = await request.json()
    messages = body.get("messages", [])
    # 获取最后一个用户消息
    last_user_message = next((msg for msg in reversed(messages) if msg["role"] == "user"), None)
    # 在函数 chat_completions 中,提取模型标识符并赋值给 model_name
    model_name = body.get("model", "model-identifier")  # 从请求数据中获取模型标识符,默认为 "model-identifier"
    # 在接收请求时,打印模型名字
    # print("Info:模型名字:", model_name)
    # 打印最新用户消息
    print("最新的用户问题:", last_user_message["content"] if last_user_message else "error:无最新用户问题")
   
   # 提取其他生成参数,并更新到 apiGET_params 字典中
    apiGET_params["temperature"] = body.get("temperature", apiGET_params["temperature"])
    apiGET_params["top_k"] = body.get("top_k", apiGET_params["top_k"])
    apiGET_params["top_p"] = body.get("top_p", apiGET_params["top_p"])
    apiGET_params["repetition_penalty"] = body.get("repetition_penalty", apiGET_params["repetition_penalty"])
    stream.data = body.get("stream", False)
    # stream.data =  False
    
    #如果处于debug 状态
    if debug:
        # 打印request_URL
        print("Debug-request_URL:", request.url)
        # 打印request_method
        print("Debug-request_method:", request.method)
        # 打印request_headers
        print("Debug-request_headers:", request.headers)
        # 打印request_body
        print("Debug-request_body:", body)
        # 打印request_query parameters
        print("Debug-request_query parameters:", request.query_params)
        # 解析消息列表
        print("Debug-接收到的messages:", messages)
        print("Info:parse_request_and_log解析请求完成")
        print("Info:parse_request_and_log解析完准备发送的messages, model_name, stream.data")
        print(messages, model_name, stream.data)
    # 检查是否启用内置历史记录
    if app.state.enable_builtin_history and last_user_message:
        app.state.history.append(last_user_message)
    
    
    return messages, model_name, stream
    
    
    
# 为chat_completions后处理生成的消息
async def after_request_and_log(app, history, response, model_name, prompt_tokens, completion_tokens):
    # print("Info:after_request_and_log收到请求,正在解析")
    # print("Info:开始为chat_completions后处理接收到的消息")
    # 构建响应数据
    response_data = build_response(history, response, model_name, prompt_tokens, completion_tokens)

    # 如果内置历史记录打开,将助手的回复添加到历史记录中
    if app.state.enable_builtin_history:
        app.state.history.append({"role": "assistant", "content": response})
    
    #如果处于debug 状态
    if debug:
        # 检查 history 是否为空,且历史开关处于打开状态
        if app.state.enable_builtin_history and app.state.history:
            # 如果 history 不为空,且历史开关处于打开状态,则打印它的 JSON 格式信息
            print(f"History: {app.state.history}")
        else:
            # 如果 history 为空,打印提示信息
            print("History:历史记录为空,没有可用的历史信息。")
            

    # print("chat_completions后处理已完成")
    # 打印传给API的完整响应信息
    # print("打印after_request_and_log产生的响应信息:", response_data)
    # chat_completions后处理已完成
    
    return response_data


# def build_response(history, generated_response, model_name, prompt_tokens, completion_tokens):
    # response_data = {
        # "message": [
            # {
                # "role": "assistant",
                # "content": generated_response,
                # },
        # ],
        # "stream": stream.data,
    # }
    # return response_data
    
def build_response(history, generated_response, model_name, prompt_tokens, completion_tokens):
    response_data = {
        "id": f"chatcmpl-{len(history) + 1}",
        "choices": [
            {
                "message": {
                    "role": "assistant",
                    "content": generated_response,
                    "function_call": "null",
                    "tool_calls": "null"
                },
                "finish_reason": "stop",
                "index": 0,
            }
        ],
        "stream": stream.data,
        "object": "chat.completion",
        "created": int(round(float(time.time()))),
        "model": model_name,
        "usage": {
            "completion_tokens": completion_tokens,
            "prompt_tokens": prompt_tokens,
            "total_tokens": prompt_tokens
        },
    }
    return response_data
import json
import requests
from openai import OpenAI, OpenAIError

class ChatClient:
    def __init__(self, base_url, api_key):
        self.base_url = base_url
        self.api_key = api_key
        self.headers = {
            "Authorization": f"Bearer {api_key}",
            "Content-Type": "application/json",
        }

    # 在 ChatClient 类中更新 send_request 方法
    def send_request(self, **kwargs):
        url = f"{self.base_url}/chat/completions"
        data = {
            "model": "model-identifier",
            **kwargs,
        }
        
        print(f"\n请求数据:\n{json.dumps(data, indent=2, ensure_ascii=False)}")

        try:
            response = requests.post(url, headers=self.headers, json=data, stream=True)
        except requests.exceptions.RequestException as e:
            raise OpenAIError(f"Failed to complete request: {e}")

        return response

    def process_streaming_response(self, response):
        for chunk in response.iter_lines(decode_unicode=True):
            if chunk.startswith("data: "):
                print(f"原始 chunk: {chunk[6:].strip()}")  # 打印原始 chunk
                chunk_data = json.loads(chunk[6:].strip())
                print(f"\n响应块:\n{json.dumps(chunk_data, indent=2, ensure_ascii=False)}")
                yield chunk_data


                
    def send_streaming_request(self, **kwargs):
        response = self.send_request(**kwargs)
        return self.process_streaming_response(response)


# 指向本地服务器
client = ChatClient(base_url="http://localhost:8000/v1", api_key="lm-studio")


history = [
    {"role": "system", "content": "你是一个智能助手,提供永远正确和有帮助的回答。"},
    {"role": "user", "content": "你好,简单介绍一下自己。"},
]

# 非流式请求
print("\n非流式请求:")
request_data = {
    "model": "model-identifier",
    "messages": history,
    "temperature": 0.7,
    "stream": False,
}
response = client.send_request(**request_data)
completion = response.json()

print(f"完整响应数据:\n{json.dumps(completion, indent=2, ensure_ascii=False)}")

# 根据实际响应数据结构提取 content
# response_content = completion['choices'][0]['message']['content']
response_content = completion.get('choices', [{}])[0].get('message', {}).get('content')

print(f"响应数据:\n{json.dumps({'content': response_content}, indent=2, ensure_ascii=False)}")

history.append({"role": "assistant", "content": response_content})

# 流式请求
print("\n流式请求:")
request_data["stream"] = True
response = client.send_streaming_request(**request_data)

new_message = {"role": "assistant", "content": ""}

for chunk in response:
    print(f"\n响应块:\n{json.dumps(chunk, indent=2, ensure_ascii=False)}")

    delta_content = chunk.get('choices', [{}])[0].get('delta', {}).get('content')
    if delta_content:
        new_message["content"] += delta_content
        print(delta_content, end="", flush=True)

    # 打印其他有用的调试信息
    model = chunk.get('model')
    if model:
        print(f"\nModel: {model}")

history.append(new_message)

while True:
    user_input = input("\n> ")
    history.append({"role": "user", "content": user_input})

    # 流式请求
    response = client.send_streaming_request(history, model="model-identifier", temperature=0.7, stream=True)

    # 流式请求
    completion = client.chat.completions.create(
        model="model-identifier",
        messages=history,
        temperature=0.7,
        stream=True,
    )

    new_message = {"role": "assistant", "content": ""}

    for chunk in completion:
        chunk_data = {
            "delta": chunk.choices[0].delta.to_dict() if chunk.choices[0].delta else None,
            "finish_reason": chunk.finish_reason,
            "index": chunk.index,
        }
        print(f"\n响应块:\n{json.dumps(chunk_data, indent=2, ensure_ascii=False)}")

        delta_content = chunk.choices[0].delta.get('content')
        if delta_content:
            new_message["content"] += delta_content
            print(delta_content, end="", flush=True)

    history.append(new_message)

import os
