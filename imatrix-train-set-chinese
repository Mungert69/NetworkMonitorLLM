import os

def merge_py_files(input_dir, output_file):
    # 遍历输入目录中的所有文件
    py_files = []
    for root, dirs, filenames in os.walk(input_dir):
        for filename in filenames:
            if filename.endswith('.py'):
                py_files.append(os.path.join(root, filename))

    # 将所有 py 文件合并到一个文件中
    with open(output_file, 'w', encoding='utf-8') as f:
        for py_file in py_files:
            with open(py_file, 'r', encoding='utf-8') as g:
                f.write(g.read())
                f.write('\n')

if __name__ == '__main__':
    input_dir = '.'
    output_file = 'python-code-merged.txt'
    merge_py_files(input_dir, output_file)

