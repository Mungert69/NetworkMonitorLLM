from chat_handler import chat_completions #处理POST请求并调用模型产生响应
from fastapi.responses import StreamingResponse
from fastapi import FastAPI, Request
from routes import app
from text import LifespanManager
from config import stream
from config import (
    UVICORN_HOST,
    UVICORN_PORT,
    UVICORN_LOG_LEVEL,
    UVICORN_TIMEOUT_KEEP_ALIVE,
)
import json

@app.post("/v1/chat/completions")
async def POST_request(request: Request):
    response_generator = chat_completions(request)
    first_response = await response_generator.__anext__()
    print("POST_request-准备传给客户端的first_response信息:", first_response)
    if "stream" in first_response and first_response["stream"]:
        print("正在使用流式传输")
        async def event_generator():
            yield "data: {"
            yield json.dumps(first_response)
            async for response_data in response_generator:
                print("流式传输-准备传给客户端的response_data信息:", response_data)
                yield f',{json.dumps(response_data)}'
            yield "}\n\n"
        return StreamingResponse(event_generator(), media_type="text/event-stream")
    else:
        print("正在使用非流式传输")
        responses = [first_response]
        async for response_data in response_generator:
            responses.append(response_data)
        return {"data": responses}










